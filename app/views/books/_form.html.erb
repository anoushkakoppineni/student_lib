<%= form_for(:books, url: books_path, method: 'post' , :html => { :class => "form-horizontal"}) do |f| %>
  <%= f.label :isbn %>
  <%= f.text_field :isbn %><br>
  <%= f.label :cover %>
  <%= f.text_field :cover %><br>
  <%= f.label :title %>
  <%= f.text_field :title %><br>
  <%= f.label :description %>
  <%= f.text_area :description %><br>
  <%= f.label :author %>
  <%= f.text_field :author %><br>
  <%= f.label :pages %>
  <%= f.number_field :pages %><br>
  <%= f.label :genres %>
  <%= f.text_field :genres %><br>
  <%= f.submit "Submit" %>
<% end %>
